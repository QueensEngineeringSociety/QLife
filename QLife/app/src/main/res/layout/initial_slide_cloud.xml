<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/initial_slide_cloud"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen4">

    <LinearLayout style="@style/WelcomeSlideLayout">

        <ImageView
            android:id="@+id/cloud_pic"
            android:layout_width="@dimen/img_width_height"
            android:layout_height="@dimen/img_width_height"
            android:scaleType="fitXY"
            android:src="@drawable/ic_cloud_outline"
            android:tint="@color/white" />

        <TextView
            android:id="@+id/cloud_title"
            style="@style/WelcomeSlideTitleText"
            android:text="@string/slide_cloud_title" />

        <TextView
            android:id="@+id/cloud_text"
            style="@style/WelcomeSlideText"
            android:text="@string/slide_cloud_text" />

    </LinearLayout>

</RelativeLayout>