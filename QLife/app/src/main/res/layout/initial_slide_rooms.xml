<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/initial_slide_rooms"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen5">

    <LinearLayout style="@style/WelcomeSlideLayout">

        <ImageView
            android:id="@+id/rooms_pic"
            android:layout_width="@dimen/img_width_height"
            style="@style/WelcomeSlideImage"
            android:src="@drawable/ic_baseline_meeting_room_24px"/>

        <TextView
            android:id="@+id/rooms_title"
            style="@style/WelcomeSlideTitleText"
            android:text="@string/slide_rooms_title" />

        <TextView
            android:id="@+id/rooms_text"
            style="@style/WelcomeSlideText"
            android:text="@string/slide_rooms_text" />
    </LinearLayout>
</RelativeLayout>