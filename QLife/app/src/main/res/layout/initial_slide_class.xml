<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/initial_slide_class"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen2">

    <LinearLayout style="@style/WelcomeSlideLayout">

        <ImageView
            android:id="@+id/calendar"
            android:layout_width="@dimen/img_width_height"
            android:layout_height="@dimen/img_width_height"
            android:src="@drawable/ic_calendar"
            android:tint="@color/white" />

        <TextView
            style="@style/WelcomeSlideTitleText"
            android:text="@string/slide_schedule_title" />

        <TextView
            style="@style/WelcomeSlideText"
            android:text="@string/slide_schedule_text" />

    </LinearLayout>


</RelativeLayout>