<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/initial_slide_campus"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_red_dark">

    <LinearLayout style="@style/WelcomeSlideLayout">

        <ImageView
            android:id="@+id/info_pic"
            style="@style/WelcomeSlideImage"
            android:src="@drawable/ic_info_black_24dp" />

        <TextView
            android:id="@+id/campus_title"
            style="@style/WelcomeSlideTitleText"
            android:text="@string/slide_campus_title" />

        <TextView
            android:id="@+id/campus_text"
            style="@style/WelcomeSlideText"
            android:text="@string/slide_campus_text" />

    </LinearLayout>

</RelativeLayout>