<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/initial_slide_welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen1">

    <LinearLayout style="@style/WelcomeSlideLayout">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="@dimen/img_width_height"
            android:layout_height="@dimen/img_width_height"
            android:src="@drawable/ic_qtap_logo_svg" />

        <TextView
            android:id="@+id/welcome"
            style="@style/WelcomeSlideTitleText"
            android:text="@string/slide_welcome_title" />

        <TextView
            android:id="@+id/description"
            style="@style/WelcomeSlideText"
            android:text="@string/slide_welcome_text" />

    </LinearLayout>
</RelativeLayout>